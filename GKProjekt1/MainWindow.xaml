<Window x:Class="GKProjekt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GKProjekt1"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static local:Globals.WindowName}, Mode=OneWay}" Height="720" Width="1280" MinHeight="720" MinWidth="1280">
    <Window.Resources>
        <Style x:Key="RightMenuButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Padding" Value="10,10,10,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ModeButton" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
            <Setter Property="Padding" Value="10,10,10,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="GroupName" Value="Radio"/>
        </Style>
        <Style x:Key="StackPanelModeButton" TargetType="RadioButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Margin" Value="5,7,5,3"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="GroupName" Value="Radio"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="ButtonGridRow" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <WrapPanel VerticalAlignment="Center">
                <RadioButton Name="PointerButton" Style="{StaticResource ModeButton}" Content="Mouse Pointer" IsChecked="True" Click="PointerMode_Click"/>
                <RadioButton Name="DrawButton" Style="{StaticResource ModeButton}" Content="Draw" Click="DrawMode_Click"/>
                <StackPanel>
                    <RadioButton Style="{StaticResource StackPanelModeButton}" Content="Add Equality Relation" Click="AddEqualRelationMode_Click"/>
                    <RadioButton Style="{StaticResource StackPanelModeButton}" Margin="5,3,5,7"  Content="Add Perpendicular Relation" Click="AddPerpendicularRelationMode_Click"/>
                </StackPanel>
                <!--<StackPanel>
                    <RadioButton Style="{StaticResource StackPanelModeButton}" Content="Add Perpendicular" Click="AddPerpendicularRelationMode_Click"/>
                    <RadioButton Style="{StaticResource StackPanelModeButton}" Margin="5,3,5,7" Content="Delete Perpendicular" Click="DeletePerpendicularRelationMode_Click"/>
                </StackPanel>-->
                <RadioButton Style="{StaticResource ModeButton}" Width="auto" Content="Add Middle Verticle" Click="AddMiddleVerticleMode_Click"/>
                <RadioButton Style="{StaticResource ModeButton}" Click="DeleteMode_Click">
                    <TextBlock Text="Delete Verticle or Relation" TextWrapping="Wrap" TextAlignment="Center"/>
                </RadioButton>
            </WrapPanel>
            <Button Grid.Column="1" Style="{StaticResource RightMenuButton}" Content="Generate Sample Polygon" Click="GenerateSamplePolygon_Click"/>
            <Button Grid.Column="2" Style="{StaticResource RightMenuButton}" Content="Clear All" Click="ClearAll_Click"/>
        </Grid>
        <Canvas Grid.Row="1" Name="PolygonCanvas" Background="White" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseMove="PolygonCanvas_MouseMove" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" >
        </Canvas>
    </Grid>
</Window>
